<% provide(:title, @user.name) %>

<h1>プロフィール</h1>
<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <table class = "table table-bordered" >
      <tbody>
        <tr>
          <th class = "active col-md-2"><%= User.human_attribute_name :id %></th>
          <td><%= @user.id %></td>
        </tr>

        <tr>
          <th class="active"><%= User.human_attribute_name :name %></th>
          <td><%= @user.name %></td>
        </tr>

        <tr>
          <th class = "active"><%= User.human_attribute_name :email %></th>
          <td><%= @user.email %></td>
        </tr>

        <tr>
          <th class = "active"><%= User.human_attribute_name :created_at %></th>
          <td><%= l(@user.created_at, format: :long) %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>