<% provide(:title, @user.name) %>

<div class="main posts-index">
  <div class="container">
    <h1><%= @user.name %>のタスク一覧</h1>
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
        <%= link_to "タスク新規作成", new_user_task_path(session[:user_id]), class: "btn btn-lg btn-primary pull-right" %>
          <table class="table table-hover" id="table-tasks">
            <!-- 上の表の部分↓↓↓　-->
            <thead>
              <tr>
                <th>名称</th>
                <th>作成日</th>
                <th></th>
              </tr>
            </thead>
            <!-- each文でタスク名と日付が出るようにする↓↓↓　-->
            <tbody>
              <tr>
                <!-- タスク名-->
                <td><a id="task-name", "#"></a></td>
                <!-- 日付(作成日)↓↓↓　-->
                <td></td>
                <!-- 編集・削除ボタン-->
                <td>
                  <a class="btn btn-success", "#">編集</a>
                  <a date-confirm="○○○○を削除します。よろしいですか？" class="btn btn-danger" rel="nofollow" date-method="delete", "#">削除</a>
                </td>
              </tr>
            </tbody>
          </table>
      </div>
    </div>
  </div>
</div>