<% provide(:title, "New Task") %>

<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">タスク新規作成</h1>
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <%= form_with(model: @user, url: user_tasks_path, local: true) do |f| %>
          <%= f.label :name, class: "label-signup" %>
          <%= f.text_field :name, class: "form-control" %>
          
        <% end %>
      </div>
    </div>
  </div>
</div>