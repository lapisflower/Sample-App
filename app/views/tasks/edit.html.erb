<% provide(:title, "Edit Task") %>

<h1>タスク編集</h1>
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <%= form_with(model: @task, url:user_task_path(@user),local: true) do |f| %>
          <%= render 'shared/error_messages', obj: @task %>
          <%= f.label :name, class: "label-form" %>
          <%= f.text_field :name, class: "form-control" %>
          <%= f.label :description, class: "label-form" %>
          <%= f.text_area :description, rows: 5, class: "form-control" %>
          <%= f.submit "更新", class: "btn btn-lg btn-primary btn-signup" %>
          <%= f.submit "キャンセル", class: "btn btn-lg btn-default btn-signup" %>
        <% end %>
      </div>
    </div>