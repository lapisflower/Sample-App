<% provide(:title, "Top") %>
<body>
  <div class="container">
     <div class="row">
       <div class= "col-md-7">
         <div class="center jumbotron" id="top-main">
           <h1 id="top-main-title">TaskApp</h1>
           <p>TaskAppは簡易ToDo管理ツールです。</p>
           <p>↓↓初めてのご利用↓↓</p>
           <a class= "btn btn-lg btn-success disabled", "#">アカウント作成</a>
           <div style="margin-top: 10px;">
           <a class= "btn btn-lg btn-danger disabled", "#" >ゲストログイン（管理権限）</a>
           <a class= "btn btn-lg btn-warning disabled", "#" >ゲストログイン（一般権限）</a>
           </div>
         </div>
       </div>
       <div class= "col-md-4">
         <h1>ログイン</h1>
         <!--ログインフォーム-->
         <%= form_with(scope: :session, url: login_path, local: true) do |f| %>

         <%= f.label :email, class: "label-login" %>
         <%= f.email_field :email, class: 'form-control' %>

         <%= f.label :password, class: "label-login" %>
         <%= f.password_field :password, class: 'form-control' %>
      
         <%= f.label :remember_me, class: "checkbox inline checkbox-login", for: "remember-me" do %>
         <%= f.check_box :remember_me, id: "remember-me" %>
         <span>ログイン情報を記憶する</span>
         <% end %>

         <%= f.submit "Log In", class: "btn btn-primary btn-block btn-login" %>
         <% end %>
        </div>
      </div>
  </div>
</body>
